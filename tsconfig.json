{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "baseUrl": ".",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "outDir": "./build",
        "declaration": true,
        "declarationDir": "./build",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "allowJs": true,
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}