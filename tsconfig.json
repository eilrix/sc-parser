{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "baseUrl": ".",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "incremental": true,
        "skipLibCheck": true,
        "outDir": "./build",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "allowJs": true,
        "jsx": "react",
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}